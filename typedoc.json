{
  "entryPoints": ["src"],
  "out": "docs",
  "theme": "default",
  "name": "PAAM FullStack API Documentation",
  "includeVersion": true,
  "excludePrivate": true,
  "excludeProtected": true,
  "excludeExternals": true,
  "readme": "README.md",
  "categorizeByGroup": true,
  "defaultCategory": "Other",
  "categoryOrder": [
    "Authentication",
    "AI Integration", 
    "Database",
    "UI Components",
    "Utilities",
    "API Routes",
    "Types",
    "Other"
  ],
  "sort": ["source-order"],
  "kindSortOrder": [
    "Project",
    "Module", 
    "Namespace",
    "Enum",
    "Class",
    "Interface",
    "Type alias",
    "Constructor",
    "Property",
    "Variable",
    "Function",
    "Accessor",
    "Method"
  ],
  "navigation": {
    "includeCategories": true,
    "includeGroups": true
  },
  "searchInComments": true,
  "cleanOutputDir": true,
  "exclude": [
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/node_modules/**"
  ]
}
